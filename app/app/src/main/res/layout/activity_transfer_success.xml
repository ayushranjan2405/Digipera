<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="#60000000"
    android:backgroundTintMode="src_over"
    tools:context=".activities.TransferSuccess">

    <!-- Header -->
    <include layout="@layout/header" />

    <LinearLayout
        android:id="@+id/transfer_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/rounded_square_outlined"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/done"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_below="@id/header"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="145dp"
            android:layout_marginTop="50sp"
            android:layout_marginEnd="146dp"
            android:background="@drawable/solid_circle"
            android:src="@drawable/ic_baseline_done_24" />

        <TextView
            android:id="@+id/transferSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/done"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-thin"
            android:text="Transfer Successful!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <include layout="@layout/fund_transfer_receipt"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_below="@id/transaction_time"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="40sp"
            android:src="@drawable/ic_baseline_share_24" />
    </LinearLayout>

